          <div class="absolute right-0 mt-2 w-40 bg-white border rounded-lg shadow-lg">
            <% visible_items.each do |item| %>
              <%= link_to item[:name], item[:path],
                          class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
            <% end %>
          </div>
        </details>
      </div>
    </div>
  </div>
</nav>
